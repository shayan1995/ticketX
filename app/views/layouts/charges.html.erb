<!DOCTYPE html>
<html>
<head>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= csrf_meta_tags %>

</head>

<body>

<% unless controller_name == 'landing' %>

<% end %>

<nav class="navbar navbar-default">
  <div class="container-fluid">

    <div class="navbar-header">
        <div align="left" id="company-name">
            <a href="<%= root_path %>" style="color: white;text-decoration: none;">ticketX</a>
        </div>
        <div align="right" style="display: inline-flex;padding: 13px;    float: right;">
          <% if current_user %>
              <%= button_to "Sign out", destroy_user_session_path, :id => 'logbutton', :method => :delete %>
              <%= button_to "My Events", my_path, :id => 'logbutton', :method => :get %>
              <% if current_user.fName == "Host" %>
                  <%= button_to "Create", new_path, :id => 'logbutton', :method => :get %>
              <% end %>
          <% else %>
              <%= button_to "Sign in",  new_user_session_path, :id => 'logbutton', :method => :get %>
          <% end %>

        </div>



        <!--
      <button type="button" class="navbar-toggle collapsed"
              data-toggle="collapse" data-target="#menu-collapse">
