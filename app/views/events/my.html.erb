
<head>
    <title> ticketX </title>

</head>

<body>

    <div id="form">




        <h1>Events I host</h1>
        <% if @host_events != nil %>
            <% @host_events.each do |e| %>

                <p>Name: <%=e.name%></p>
                <p>Location: <%=e.location%></p>
                <p>Performer: <%=e.performer%></p>
                <p>Price: <%=e.price%></p>
                <%= button_to "Details", show_path(id: e), :id => 'solebutton', :method => :patch %>
                <%= button_to "Buy", buy_path(id: e), :id => 'solebutton', :method => :get %>
                <% if current_user == e.user %>
                    <%= button_to "Edit", edit_path(id: e), :id => 'solebutton', :method => :patch %>

                <% end %>


            <% end %>
        <% end %>
        <h1>Events I Bought</h1>
        <% if @orderevents != nil%>
            <% @orderevents.each do |e| %>

                <p>Name: <%=e.name%></p>
                <p>Location: <%=e.location%></p>
                <p>Performer: <%=e.performer%></p>
                <p>Price: <%=e.price%></p>
                <%= button_to "Details", show_path(id: e), :id => 'solebutton', :method => :patch %>
                <%= button_to "Buy", buy_path(id: e), :id => 'solebutton', :method => :get %>
                <% if current_user == e.user %>
                    <%= button_to "Edit", edit_path(id: e), :id => 'solebutton', :method => :patch %>

                <% end %>


            <% end %>
        <% end %>
        


    </div>
</body>




